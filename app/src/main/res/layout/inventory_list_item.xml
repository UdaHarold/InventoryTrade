<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/inventory_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="商品名称" />

    <TextView
        android:id="@+id/inventory_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="商品总量"
        app:layout_constraintBottom_toBottomOf="@+id/inventory_name_value"
        app:layout_constraintLeft_toRightOf="@+id/inventory_name_value"
        app:layout_constraintTop_toTopOf="@+id/inventory_name_value" />

    <TextView
        android:id="@+id/inventory_quantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/inventory_quantity_label"
        app:layout_constraintLeft_toRightOf="@+id/inventory_quantity_label"
        app:layout_constraintTop_toTopOf="@+id/inventory_quantity_label"
        tools:text="296" />

    <TextView
        android:id="@+id/inventory_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="价格"
        app:layout_constraintLeft_toLeftOf="@+id/inventory_name_value"
        app:layout_constraintTop_toBottomOf="@+id/inventory_name_value" />

    <TextView
        android:id="@+id/inventory_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/inventory_price_label"
        app:layout_constraintLeft_toRightOf="@+id/inventory_price_label"
        app:layout_constraintTop_toTopOf="@+id/inventory_price_label"
        tools:text="¥296.0元" />

    <TextView
        android:id="@+id/inventory_sales_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="销售次数"
        app:layout_constraintBottom_toBottomOf="@+id/inventory_price_value"
        app:layout_constraintLeft_toRightOf="@+id/inventory_price_value"
        app:layout_constraintTop_toTopOf="@+id/inventory_price_value" />

    <TextView
        android:id="@+id/inventory_sales_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/inventory_sales_label"
        app:layout_constraintLeft_toRightOf="@+id/inventory_sales_label"
        app:layout_constraintTop_toTopOf="@+id/inventory_sales_label"
        tools:text="3次" />

    <Button
        android:id="@+id/sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="销售"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory_sales_label" />


</android.support.constraint.ConstraintLayout>